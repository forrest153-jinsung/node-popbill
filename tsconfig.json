{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES2015"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["lib/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
